@model SchoolTrackingSystem.EntityLayer.Model.Students

@{
    ViewData["Title"] = "Öğrenci Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Ad Soyad</label>
                <input asp-for="NameSurname" class="form-control" />
                <span asp-validation-for="NameSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sınıf</label>
                <input asp-for="Classroom" class="form-control" />
                <span asp-validation-for="Classroom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Okul Numarası</label>
                <input asp-for="SchoolNumber" class="form-control" />
                <span asp-validation-for="SchoolNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Telefon Numarası</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">E-Posta</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Anne Numarası</label>
                <input asp-for="MotherNumber" class="form-control" />
                <span asp-validation-for="MotherNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Baba Numarası</label>
                <input asp-for="FatherNumber" class="form-control" />
                <span asp-validation-for="FatherNumber" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> Aktif| Pasif
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Öğrenci Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
